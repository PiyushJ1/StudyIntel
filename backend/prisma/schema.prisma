generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.Uuid
  firstname String
  lastname  String
  email     String   @unique
  password  String
  courses   String[] // will migrate later
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model UserCourse {
  id         String @id @default(uuid())
  userId     String
  courseCode String

  // add other fields here later

  @@unique([userId, courseCode])
}

model WaitlistEmail {
  email String @id @map("emails")

  @@map("waitlistemails")
}
