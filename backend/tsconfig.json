{
  "compilerOptions": {
    "target": "es2023",

    "module": "node16",
    "moduleResolution": "node16",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": ".",

    "types": ["node", "jest"],

    "paths": {
      "@prisma/*": ["./prisma/*"]
    }
  },
  "include": ["src/**/*", "prisma/generated/**/*", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
